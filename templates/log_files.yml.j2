files:
{% for item in remote_syslog_files %}
 - {{item}}
{% endfor %}
destination:
  host: {{ remote_syslog_host }}
  port: {{ remote_syslog_port }}
  protocol: {{ remote_syslog_protocol }}
{% if remote_syslog_hostname %}
hostname: {{ remote_syslog_hostname }}
{% endif %}
{% if remote_syslog_pidfile %}
pid_file: {{ remote_syslog_pidfile }}
{% endif %}
